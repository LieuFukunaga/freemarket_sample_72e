.menu
  %header.menu__header
    = link_to image_tag('logo.png'), root_path

  %main.menu__main
    .menu__main__box
      .menu__main__box__account
        %p
          アカウントをお持ちでない方はこちら
        %br
        = link_to "新規会員登録", new_user_registration_path, class: "btn"
      .menu__main__box__in
        .menu__main__box__in__area
          .menu__main__box__in__area__btn
            .icon-facebook
            Facebookでログイン
        .menu__main__box__in__under
          .menu__main__box__in__under__btn
            %i.icon-facebook
            Googleでログイン
      .menu__main__box__form
        .menu__main__box__form__in
          = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
            .menu__main__box__form__in__group
              = f.email_field :email, placeholder: "メールアドレス", class: "login-input-text"
            .menu__main__box__form__in__group
              = f.password_field :password, placeholder: "パスワード", class: "login-input-text", autocomplete: "off"
            .menu__main__box__form__in__group
              = f.submit "ログイン", id: "token_submit", class: "btn-default"
            .menu__main__box__form__in__group__last
              = link_to "パスワードをお忘れの方", "#";
  %br
  %footer.footer
    .footer__hight
      .footer__hight__line
        .footer__hight__line__one
        = link_to "プライバシーポリシー", "#";
        .footer__hight__line__two
        = link_to "利用規約", "#";
        .footer__hight__line__three
        = link_to "特定商取引に関する表記", "#";
      .footer__hight__body
        = link_to image_tag('logo-white.png'), '#'
        %p©️FURIMA